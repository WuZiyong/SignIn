{% extends "base.pug" %}
// Portfolio Section

{% block title %}生成活动{% endblock %}
{% load sass_tags %}
{% block css %}
script(src='/static/js/scripts.js')
script(src="/static/js/util.js")
{% endblock %}


{% block content %}
section#create.page-section
  .container
    // Contact Section Heading
    h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0.fonthead 登录
    
    // Icon Divider
    .divider-custom
      .divider-custom-line
      .divider-custom-icon
        i.fas.fa-star
      .divider-custom-line
    //-.row.justify-content-center.warningrow
    // Contact Section Form
    .row.justify-content-center
      .col-lg-8.col-xl-7
        form.form-login(action="/login/" method="post")
          {% if message %}
          .alert.alert-warning {{ message }}
          {% endif %}
          {% csrf_token %}
          .form-floating
            {{ login_form.username}}
            label(for='name') 姓名
          .form-floating
            {{ login_form.password }}
            label(for='password') 密码
            
              
            
          //-.form-floating
            input#inputPhone.form-control(type='tel' placeholder='Enter your phone number...')
            label(for='inputPhone') Phone Number
          //-.form-floating
            textarea#inputMessage.form-control(placeholder='Enter your message here...' style='height: 12rem')
            label(for='inputMessage') Message
          br
          button.btn.btn-primary.btn-xl.createactbutton(type="submit") 登录

{% endblock %}