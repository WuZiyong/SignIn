{% extends "base.pug" %}
// Portfolio Section

{% block title %}生成活动{% endblock %}
{% load sass_tags %}
{% block css %}
script(src='/static/js/scripts.js')
script(src="/static/js/util.js")
script(src='/static/js/createmeet.js')
link(href="{% sass_src 'scss/createmeet.scss' %}" rel="stylesheet" type="text/css")
{% endblock %}


{% block content %}
section#create.page-section
  .container
    // Contact Section Heading
    h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0.fonthead 新增活动
    
    // Icon Divider
    .divider-custom
      .divider-custom-line
      .divider-custom-icon
        i.fas.fa-star
      .divider-custom-line
    //-.row.justify-content-center.warningrow
    // Contact Section Form
    .row.justify-content-center
      .col-lg-8.col-xl-7
        form#createactivityform(onsubmit="return false;")
          .form-floating
            input#inputActivityName.form-control(type='text' name='meet_theme' placeholder='Enter the meet-theme...')
            label(for='inputActivityTheme') 活动主题
          .form-floating
            input#inputActivityName.form-control(type='text' name='meet_name' placeholder='Enter the meet-name...')
            label(for='inputActivityName') 活动名称
          .form-floating
            input#inputBeginTime.form-control(type='datetime-local' name='meet_begin_time' placeholder='Enter the begin time...')
            label(for='inputBeginTime') 签到开始时间
          .form-floating
            input#inputEndTime.form-control(type='datetime-local' name='meet_end_time' placeholder='Enter the end time...')
            label(for='inputEndTime') 签到结束时间
          .form-floating.attendcheck
            h4.text-secondary.mb-0.attendtext 出席学生范围
            .attendcheckrow
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkone.checkunder(type="checkbox" value="1" name="need_grade")
                Option 大一
              .attendcheckitem
                input.form-check-input.attendcheckinput.checktwo.checkunder(type="checkbox" value="2" name="need_grade")
                Option 大二
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkthree.checkunder(type="checkbox" value="3" name="need_grade")
                Option 大三
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkfour.checkunder(type="checkbox" value="4" name="need_grade")
                Option 大四
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkundergraduate(type="checkbox" value="")
                Option 全部本科生
            .attendcheckrow.paddtop1
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkfive.checkgrad(type="checkbox" value="5" name="need_grade")
                Option 研一
              .attendcheckitem
                input.form-check-input.attendcheckinput.checksix.checkgrad(type="checkbox" value="6" name="need_grade")
                Option 研二
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkseven.checkgrad(type="checkbox" value="7" name="need_grade")
                Option 研三
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkeight.checkgrad(type="checkbox" value="8" name="need_grade")
                Option 研四
              .attendcheckitem
                input.form-check-input.attendcheckinput.checknine.checkgrad(type="checkbox" value="9" name="need_grade")
                Option 研五
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkgraduate(type="checkbox" value="")
                Option 全部研究生
            .attendcheckrow.attendcheckrowend
              .attendcheckitem
                input.form-check-input.attendcheckinput.checkall(type="checkbox" value="")
                Option 全院
              
            
          //-.form-floating
            input#inputPhone.form-control(type='tel' placeholder='Enter your phone number...')
            label(for='inputPhone') Phone Number
          //-.form-floating
            textarea#inputMessage.form-control(placeholder='Enter your message here...' style='height: 12rem')
            label(for='inputMessage') Message
          br
          button.btn.btn-primary.btn-xl.createactbutton 生成活动

{% endblock %}